{
  "name": "validate-integration-action",
  "version": "1.0.0",
  "private": true,
  "description": "Action for validate integration configuration JSON",
  "main": "lib/src/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license LICENSE && cp ./src/integration.schema.json ./dist",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leanix/validate-integration-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "integration"
  ],
  "author": "",
  "license": "Unlicense",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "fs-extra": "^10.0.1",
    "jsdom": "^19.0.0",
    "marked": "^4.0.12"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jsdom": "^16.2.14",
    "@types/marked": "^4.0.2",
    "@types/node": "^17.0.21",
    "@typescript-eslint/parser": "^5.15.0",
    "@vercel/ncc": "^0.33.3",
    "eslint": "^8.11.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-jest": "^26.1.1",
    "fs-extra": "^10.0.1",
    "jest": "^27.5.1",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  }
}
